<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BloodBankMeraFinal"
        tools:targetApi="31">


        <!-- Intro Activity (Launcher Activity) -->
        <activity
            android:name=".IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity"></activity>

        <!-- Sign-Up Activity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <!-- Forget Password Activity -->
        <activity android:name=".ForgotPasswordActivity" />

        <activity android:name=".HomeActivity"
            tools:ignore="Instantiatable" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BloodBankMeraFinal" />

        <!-- Add FindDonorActivity here -->
        <activity
            android:name=".FindDonorActivity"
            android:exported="true" />
        <activity android:name=".FindDonor2" />
        <activity android:name=".DonorInfoActivity" />

        <activity android:name=".Form0Activity" />
        <activity android:name=".Form1Activity" />
        <activity android:name=".Form2Activity" />
        <activity android:name=".Form3Activity" />
        <activity android:name=".Form4Activity" />

        <activity android:name=".UserProfileActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".DonationHistoryActivity" />
        <activity android:name=".RequestActivity" />


    </application>

</manifest>
