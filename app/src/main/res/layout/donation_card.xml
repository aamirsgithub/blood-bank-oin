<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Blood Type Icon and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Blood Type Icon -->
            <TextView
                android:id="@+id/textView_bloodType"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="#490008"
                android:text="AB+"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Donor Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_donorInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female, 21yr old"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_donorLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DHA, Lahore | 3 Km"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Call Icon -->
            <ImageView
                android:id="@+id/icon_call"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_call" />
        </LinearLayout>

        <!-- Time Limit -->
        <TextView
            android:id="@+id/textView_timeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Time Limit: 15/11/2022"
            android:textColor="#000000"
            android:textStyle="italic" />

        <!-- Status -->
        <TextView
            android:id="@+id/textView_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Accepted"
            android:textColor="#228B22"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
