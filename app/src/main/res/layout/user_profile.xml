<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="120dp"
        android:layout_width="410dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:text="@string/title_homepage"
            android:textColor="#490008"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:text="@string/label_your_profile"
        android:textColor="#490008"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_name"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="textPersonName"
        android:hint="@string/hint_name"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_email"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_email"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_city"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="phone"
        android:hint="@string/hint_city"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_phone_number"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextPhoneNumber"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="phone"
        android:hint="@string/hint_phone_number"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_blood_group"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextBloodGroup"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="text"
        android:hint="@string/hint_blood_group"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:text="@string/label_address"
        android:textColor="@color/greyy"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg_w"
        android:backgroundTint="#490008"
        android:inputType="textPostalAddress"
        android:hint="@string/hint_address"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textSize="14sp" />


    <!-- Horizontal layout for Logout icon and texts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Logout icon -->
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"
            android:contentDescription="@string/content_description_logout_icon" />

        <!-- Spacer for alignment -->

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <!-- Logout text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_logout"
            android:textColor="#490008"
            android:textStyle="bold" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="220dp"
            android:layout_height="wrap_content" />

        <!-- Back text -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_back"
            android:textColor="#490008"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
