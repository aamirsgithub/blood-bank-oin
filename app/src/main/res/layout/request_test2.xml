<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/request_test"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="280dp"
        android:text="Are you suffering from any of the below?"
        android:textColor="#490008"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <!-- List with bullets -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:text="• Transmittable disease\n• Asthma\n• Cardiac arrest\n• Hypertension\n• Blood pressure\n• Diabetes\n• Cancer"
        android:textColor="#490008"
        android:textSize="16sp"
        android:lineSpacingExtra="2dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="236dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_rs"
        android:text="Yes"
        android:textColor="#490008"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button4"
        android:layout_width="236dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_rs"
        android:text="No"
        android:textColor="#490008"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>
